<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Company>Internet Sukces Piotr Stęclik</Company>
    <Authors>Internet Sukces Piotr Stęclik</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright by Internet Sukces Piotr Stęclik 2017-2022</Copyright>
    <TargetFrameworks>net48;netstandard2.0;netcoreapp3.1;net6.0;net6.0-windows;net7.0</TargetFrameworks>
    <AssemblyOriginatorKeyFile>key.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>true</SignAssembly>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Product>iSukces.Math</Product>
    <PackageId>iSukces.Math</PackageId>
    <Description>Użyteczne klasy i metody do nieco bardziej zaawansowanej matematyki</Description>
    <IncludeSource>false</IncludeSource>
    <IncludeSymbols>true</IncludeSymbols>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <AssemblyVersion>1.0.22324.122</AssemblyVersion>
    <Version>1.0.22324.122</Version>
    <FileVersion>1.0.22324.122</FileVersion>
    <RootNamespace>iSukces.Mathematics</RootNamespace>
    <PackageProjectUrl>https://github.com/isukces/iSukces.Math</PackageProjectUrl>
    <NoWarn>1701;1702;CS1591;CS1572;CS1573;CS1591</NoWarn>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <DefineConstants>$(DefineConstants);WPFFEATURES;TYPECONVERTERS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' != 'net'">
    <DefineConstants>$(DefineConstants);COREFX;TYPECONVERTERS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'net6.0-windows'">
    <UseWpf>true</UseWpf>
    <ImplicitUsings>true</ImplicitUsings>
    <DefineConstants>$(DefineConstants);WPFFEATURES;TYPECONVERTERS</DefineConstants>
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <Reference Include="System" />
    <Reference Include="WindowsBase" />
    <Reference Include="PresentationCore" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2022.3.1" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Features\TypeConverters\GenericTypeConverter.cs">
      <DependentUpon>MathTypeConverter.cs</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>